<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Nozama", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    
                    <li>@Html.ActionLink("Anagrafiche", "ListAnagrafica", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Spedizioni", "Index", "Spedizioni", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
                </dixv>
            </div>
    </nav>
    <div class="container body-content" style="margin-top:0;">
        @RenderBody()
        <hr />

        <footer>
            <div class="row">
                <div class="col-4">
                    <ul style="list-style:none;">
                        <li class="py-2 border-bottom">Home</li>
                        <li class="py-2 border-bottom">Come spedire</li>
                        <li class="py-2 border-bottom">Come imballare</li>
                    </ul>
                </div>
                <div class="col-4">
                    <p>Spedizioni in:</p>
                    <ul>
                        <li>Italia</li>
                        <li>Europa</li>
                        <li>Resto del mondo</li>
                    </ul>
                </div>
                <div class="col-4 pb-3">
                    <img style="width:200px;height:100px;" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSzJXY68S-kqcqvZ3uyJEen1KbJPBdUVYnhLAf6VpjWc8lt8XMdzeHUrYhpc5vEs0htxKg&usqp=CAU"/>
                    <p>Contatti:</p>
                    <ul style="list-style:circle;">
                        <li>Telefono: 123456789</li>
                        <li>Email:<a href="mailto:miaemail@email.it"</a>email.it</li>
                        
                    </ul>


                </div>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
