@model  IEnumerable<SitoSpedizioni.Models.Spedizioni> 


@{
    ViewBag.Title = "Lista Spedizioni";
}

<h2>Lista Spedizioni</h2>

<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-primary" })
    @Html.ActionLink("Prima Query", "PrimaQuery", "Spedizioni", new { @class = "btn btn-primary" })
    @Html.ActionLink("Seconda Query", "SecondaQuery", "Spedizioni", new { @class = "btn btn-info" })
    @Html.ActionLink("Terza Query", "TerzaQuery", "Spedizioni", new { @class = "btn btn-warning" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDspedizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataSpedizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Peso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CittaDestinataria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataPrevistaArrivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDanagrafe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDspedizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataSpedizione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CittaDestinataria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPrevistaArrivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDanagrafe)
            </td>
            <td>
                @( (SitoSpedizioni.Models.Entities.StatoSpedizione ) item.Status )
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit","Spedizioni", new {  id=item.IDspedizione  }, new { @class = "btn btn-success" }) 
                @Html.ActionLink("Details", "Details", "Spedizioni", new {  id=item.IDspedizione }, new { @class = "btn btn-warning" }) 
                @Html.ActionLink("Delete", "Delete", "Spedizioni", new { id=item.IDspedizione }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
