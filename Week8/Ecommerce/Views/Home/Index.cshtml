@model IEnumerable<Ecommerce.Models.Entities.Prodotto>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container d-flex justify-content-around ">
	@foreach (var item in Model)
	{
		<div class="card mx-3 " style="width: 18rem;">
			<img class="card card-img-top" src="@Url.Content(item.Immagine)" alt="Immagine non disponibile" />
			<div class="card-body">
				<h5 class="card-title"> @Html.DisplayFor(modelItem => item.Nome)</h5>
				<p> @Html.DisplayFor(modelItem => item.Prezzo)</p>
				<p>@Html.ActionLink("Dettagli", "Details", new {  id=item.IdProdotto  }, new{@class="btn btn-primary"})</p>
			</div>
		</div>
	}
</div>
